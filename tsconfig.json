{
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "paths": {
        "@prisma/generated-client": [
          "prisma/client"
        ]
      }
    }
  },
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "noEmit": true,
    "importHelpers": true,
    "newLine": "lf",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@prisma/generated-client": [
        "prisma/client"
      ]
    }
  },
  "include": [
    "src/**/*",
    "prisma/**/*"
  ]
}
